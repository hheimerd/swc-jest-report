{
    "watchman": false,
    "passWithNoTests": true,
    "roots": [
        "<rootDir>/src"
    ],
    "cacheDirectory": "<rootDir>/node_modules/.cache/jest",
    "collectCoverageFrom": [
        "src/App.tsx"
    ],
    "coverageDirectory": "<rootDir>/__reports",
    "transformIgnorePatterns": [
        "/node_modules/"
    ],
    "moduleDirectories": [
        "node_modules",
        "src"
    ],
    "coverageReporters": [
        "lcov"
    ],
    "transform": {
        "^.+\\.(t|j)sx?$": [
            "@swc/jest",
            {
                "jsc": {
                    "target": "es2021"
                },
                "sourceMaps": "inline"
            }
        ]
    }
}
